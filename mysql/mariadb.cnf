[mysqld]
user=mysql
datadir=/var/lib/mysql

# Listen on all interfaces for LAN access
bind-address=0.0.0.0

# SQL mode sane defaults if desired
sql_mode=STRICT_ALL_TABLES,NO_ENGINE_SUBSTITUTION

# Default storage engine InnoDB
default_storage_engine=InnoDB

# InnoDB tuning for personal machine (512M buffer pool)
innodb_buffer_pool_size=512M
innodb_log_file_size=256M
innodb_flush_method=O_DIRECT
innodb_flush_log_at_trx_commit=1

# Logging
log-error=/var/log/mysql/mariadb-error.log
slow_query_log=1
slow_query_log_file=/var/log/mysql/mariadb-slow.log
long_query_time=2

# General query log (optional; usually off in production)
#general_log=1
#general_log_file=/var/log/mysql/mariadb-general.log

# Allow larger packet size if needed
max_allowed_packet=64M